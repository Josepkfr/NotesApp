<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h1>Login</h1>
      </div>
      <img
        src="/img/logo.png"
        alt="logo"
        class="rounded-circle mx-auto d-block m-4 logo"
      />
      <div class="card-body">
        <form action="/user/login" method="post">
          <div class="form-group">
            <input
              type="email"
              name="email"
              class="form-control"
              placeholder="example@example.com"
            /></div>
          <div class="form-group">
            <input
              type="password"
              name="password"
              class="form-control"
              placeholder="password"
            /></div>
          <div class="form-group">
            <button
              type="submit"
              class="btn btn-primary btn-block"
            >Enviar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>